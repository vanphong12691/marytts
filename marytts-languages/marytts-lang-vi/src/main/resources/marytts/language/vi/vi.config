##########################################################################
# MARY TTS configuration file.
##########################################################################

name = vi
vi.version = 4.3.0

locale = vi


###########################################################################
############################## The Modules  ###############################
###########################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.


# Java classes to use as the modules, as a whitespace-separated list.
# These have to implement marytts.modules.MaryModule.
# For each input type + output type, only one Module may be listed
# across all components, or an Exception will be thrown.
# No particular order is required -- a processing pipeline from input data type
# to output data type will be computed on-line.

modules.classes.list = \
		marytts.language.vi.Preprocess \
        marytts.modules.JPhonemiser(vi.)  \
        marytts.language.vi.Prosody \
        marytts.modules.MinimalisticPosTagger(vi,vi.) \

        marytts.modules.CARTDurationModeller(vi,vi.duration.,marytts.features.FeatureProcessorManager(vi)) \
        marytts.modules.CARTF0Modeller(vi,vi.f0.,marytts.features.FeatureProcessorManager(vi)) \




####################################################################
####################### Module settings  ###########################
####################################################################

# Phonemiser settings
vi.allophoneset = jar:/marytts/language/vi/lexicon/allophones.vi.xml
vi.lexicon = jar:/marytts/language/vi/lexicon/vi_lexicon.fst
vi.lettertosound = jar:/marytts/language/vi/lexicon/vi.lts
#vi.userdict = MARY_BASE/user-dictionaries/userdict-vi.txt

# POS tagger settings
vi.partsofspeech.fst = jar:/marytts/language/vi/tagger/vi_pos.fst
vi.partsofspeech.punctuation = ,.?!;

vi.prosody.paragraphdeclination = true
# rules for prediction of ToBI tones
vi.prosody.tobipredparams = jar:/marytts/language/vi/prosody/tobipredparams_english.xml
# rules for accent priorities of pos
vi.prosody.accentPriorities = jar:/marytts/language/vi/prosody/POSAccentPriorities.en.properties

# Global prosody trees:
vi.duration.cart = MARY_BASE/lib/modules/vi/cap/dur.graph.mry

vi.f0.cart.left = MARY_BASE/lib/modules/vi/cap/f0.left.tree
vi.f0.cart.mid = MARY_BASE/lib/modules/vi/cap/f0.mid.tree
vi.f0.cart.right = MARY_BASE/lib/modules/vi/cap/f0.right.tree
vi.f0.featuredefinition = MARY_BASE/lib/modules/vi/cap/phoneUnitFeatureDefinition.txt

# Feature processor manager
featuremanager.classes.list = \
	marytts.features.FeatureProcessorManager(vi)
